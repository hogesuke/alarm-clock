#!/usr/bin/env python3

import sys, os

sys.path.append(os.path.dirname(__file__) + '/../lib')

from alarm_clock import AlarmClock

argvs = sys.argv
ws_url = 'ws://localhost:8080/light'

if len(argvs) < 4:
    print('Usage: # python %s hour minute second ws_url' % argvs[0])
    quit()

if len(argvs) == 5:
  ws_url = argvs[4]

clock = AlarmClock(int(argvs[1]), int(argvs[2]), int(argvs[3]), ws_url)
